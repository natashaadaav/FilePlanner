#: import Window kivy.core.window.Window

<Manager>:
    gid: 'Manager'
    register_method: app.register_widget(self)
    id: screen_manager
    main_screen: main_screen
    MainScreen:
        gid: 'MainScreen'
        register_method: app.register_widget(self)
        id: main_screen
        name: 'MainScreen'
        manager: screen_manager

        MainBox


    DayScreen:
        gid: 'DayScreen'
        register_method: app.register_widget(self)
        id: day_screen
        name: 'DayScreen'
        manager: screen_manager


<FileLayout>:
    gid: 'FileLayout'
    register_method: app.register_widget(self)
    size_hint: None, None
    padding: app.file_panel_padding
    spacing: app.file_panel_padding
    height: app.file_panel_height
    width: sum(x.width + self.padding[0] for x in self.children) + self.spacing



<FileWidget>:
    background_normal: ''
    background_down: ''
    background_color: (0, 0, 0, 0)
    color: (0, 0, 0)
    on_release: app.select_file(self)
    width: 150
    text_size: self.width, self.height
    valign: 'middle'
    halign: 'center'
    padding: 5

    canvas.before:
        Color:
            rgba: app.main_rgba
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(5, 5), (5, 5), (5, 5), (5, 5)]

<CalendarLayout>:
    gid: 'CalendarLayout'
    register_method: app.register_widget(self)
    orientation: 'vertical'
    padding: app.file_panel_padding
    canvas.before:
        Color:
            rgba: app.main_rgba
        Rectangle:
            pos: self.pos
            size: self.size
    MonthLayout
    DayGrid


<MonthLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    padding: app.file_panel_padding * 2
    spacing: app.file_panel_padding
    height: app.file_panel_height * 1.5
    Widget
    Button:
        background_normal: ''
        background_down: ''
        background_color: (0, 0, 0, 0)
        size_hint_x: None
        size_hint_y: None
        width: app.file_panel_height/1.5
        height: app.file_panel_height/1.5
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Triangle:
                points:
                    (self.pos[0] + self.size[0], self.pos[1] + self.size[1], \
                    self.pos[0], self.pos[1] + self.size[1] / 2, \
                    self.pos[0] + self.size[0],  self.pos[1])
        on_release: app.previous_month()
    Label:
        bold: True
        text: app.current_month_text
        font_size: Window.height/25
        color: app.accent_rgba
    Button:
        background_normal: ''
        background_down: ''
        background_color: (0, 0, 0, 0)
        size_hint_x: None
        size_hint_y: None
        width: app.file_panel_height/1.5
        height: app.file_panel_height/1.5
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Triangle:
                points:
                    (self.pos[0], self.pos[1], \
                    self.pos[0] + self.size[0], self.pos[1] + self.size[1] / 2, \
                    self.pos[0],  self.pos[1] + self.size[1])
        on_release: app.next_month()
    Label:
        bold: True
        text: app.current_year
        font_size: Window.height/25
        color: app.accent_rgba

<DayGrid>:
    gid: 'DayGrid'
    register_method: app.register_widget(self)
    spacing: app.file_panel_padding
    padding: app.file_panel_padding
    rows: 7
    cols: 7

<DayLayoutRel>:
    ShadowBox

<DayLabel>:
    color: app.accent_rgba
    font_size: Window.height/30

<DayLayout>:
    background_normal: ''
    background_down: ''
    background_color: (0, 0, 0, 0)
    on_release: app.select_day(self.parent)
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1) if self.wd not in (6, 5) else app.hot_rgba
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(5, 5), (5, 5), (5, 5), (5, 5)]
    Label:
        text: self.parent.day
        color: (0, 0, 0, 1)
    Widget:
        canvas.before:
            Color:
                rgba: app.accent_rgba if self.parent.files else (0, 0, 0, 0)
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [(0, 0), (5, 5), (5, 5), (0, 0)]
        canvas.after:
            Color:
                rgba: (1, 1, 1, 1) if self.parent.files else (0, 0, 0, 0)
            Ellipse:
                pos: self.pos[0] + self.size[0]/2 - self.size[0]/(2 * 8), self.pos[1] + self.size[1]/2 - self.size[1]/(2 * 8)
                size: self.size[0]/8, self.size[1]/8


<ShadowBox>:
    canvas.before:
        Color:
            rgba: (0, 0, 0, .7)
        BoxShadow:
            pos: self.pos[0] + 10, self.pos[1] + 10
            size: self.size[0] - 20, self.size[1] - 20
            blur_radius: 15


<ClosePopupButton>:
    text: 'Назад'
    color: app.accent_rgba
    size_hint_y: None
    height: app.file_widget_height
    background_normal: ''
    background_down: ''
    background_color: (0, 0, 0, 0)
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(5, 5), (5, 5), (5, 5), (5, 5)]

<RunPopupButton>:
    text: 'Сохранить'
    color: app.accent_rgba
    size_hint_y: None
    height: app.file_widget_height
    background_normal: ''
    background_down: ''
    background_color: (0, 0, 0, 0)
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(5, 5), (5, 5), (5, 5), (5, 5)]

<ModalViewAdd>:
    padding: 0
    background_normal: ''
    background_down: ''
    background_color: (0, 0, 0, 0)
    overlay_color: (.7, .7, .7, .5)
    size_hint: (.5, .5)
    canvas.before:
        Color:
            rgba: (0, 0, 0, .7)
        BoxShadow:
            pos: self.pos[0] + 10, self.pos[1] + 10
            size: self.size[0] - 20, self.size[1] - 20
            blur_radius: 20



<PopupLayout>
    orientation: 'vertical'
    spacing: app.file_panel_padding
    padding: app.file_panel_padding

    canvas.before:
        Color:
            rgba: app.main_rgba
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(5, 5), (5, 5), (5, 5), (5, 5)]


<ButtonLayout>
    orientation: 'horizontal'
    spacing: app.file_panel_padding
    padding: app.file_panel_padding


<PopupLabel>:
    color: (0, 0, 0, 1)
    font_size: Window.height/30
    halign: 'center'
    valign: 'middle'

<MainBox>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    UserRelativeLayout:
        size_hint_y: None
        height: app.file_panel_height
        id: file_panel
        ScrollV:
            id: scroll_area
            size_hint_x: 1
            do_scroll_y: False
            do_scroll_x: True
            scroll_type: ['bars', 'content']
            on_scroll_stop: app.on_scroll_up(self)
            FileLayout
    CalendarLayout

<DeleteButton>:
    background_normal: ''
    background_down: ''
    background_color: (0, 0, 0, 0)
    color: app.accent_rgba
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(0, 0), (5, 5), (5, 5), (0, 0)]


<DeleteLabel>:
    color: (0, 0, 0, 1)
    size_hint: (1, 1)

    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(5, 5), (0, 0), (0, 0), (5, 5)]

<DeleteScroll>:
    id: scroll_area
    size_hint_y: 1
    do_scroll_x: False
    do_scroll_y: True
    scroll_type: ['bars', 'content']

<DeleteLayout>:
    orientation: 'vertical'
    size_hint_y: None
    padding: app.file_panel_padding

    spacing: app.file_panel_padding
    height:
        max(sum(x.height + self.padding[1] for x in self.children) + self.spacing, \
        Window.height - (app.file_panel_height + app.file_widget_height))

<DeleteButtonRel>:
    ShadowBox

<MainDeleteBox>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: app.main_rgba
        Rectangle:
            pos: self.pos
            size: self.size